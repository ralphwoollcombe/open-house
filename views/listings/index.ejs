<!-- views/listings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Listings</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Here's all the Listings</h1>
    <a href="/listings/new">Add a new listing</a>
      <ul>
        <% listings.forEach(listing => { %>
        <li>A listing in <%= listing.city %> owned by <%= listing.owner.username %></li>
        <a href="/listings/<%= listing._id %>">View more details here</a>
        <% }) %>
      </ul>
  </body>
</html>

